	<context:property-placeholder
		location="classpath:/connection.properties,classpath:/jms.properties,classpath*:META-INF/config/**/*.properties" />

	<import resource="classpath:/META-INF/jms-config.xml" />
	<!--  
	<import resource="classpath:/META-INF/database-config.xml" />
	-->

</beans>


